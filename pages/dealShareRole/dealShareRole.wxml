<view class="page">
    <view class="page__bd page__bd_spacing">
        <view class="userinfo">
            <image class="userinfo-avatar" src="{{avatarUrl}}" background-size="cover"></image>
            <text class="userinfo-nickname">{{nickName}}</text>
        </view>
        <text class="tips">{{tips}}</text>
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bind:tap="onComfirmTap" loading="{{sharing}}">
                确定接受
            </button>
            <button class="weui-btn" type="default" bind:tap="onCancelTap">取消</button>
        </view>
    </view>
</view>